@using HelpingHands.Models
@model List<PreferredSuburbVM>

@{
    Layout = "_NurseSuburbs";
}

<section class="section profile">
    <div class="row">

        <div class="col-lg-12">

            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                <h5 class="card-title">Patient Conditions</h5>
                @if (Model.Count > 0)
                {
                    <table class="table" id="tblCity">
                        <thead>
                            <tr>
                                <th>Condition Name</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var suburb in Model)
                            {
                                <tr>
                                    <td>
                                        @suburb.Suburb
                                    </td>

                                    <td>
                                        <form method="post" asp-action="DeleteMyCondition" asp-controller="Patient">
                                            <input type="hidden" name="conditionId" value="@suburb.SuburbId" />
                                            <input type="hidden" name="patientId" value="@suburb.NurseId" />
                                            <button type="submit" style="background:none; border:none; padding: 0; font: inherit; cursor: pointer;">
                                                <i class='bx bx-trash' style='color:#e31313'></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <h2>You have not add any preferred suburbs.</h2>
                }


            </div>

        </div>
    </div>
</section>
