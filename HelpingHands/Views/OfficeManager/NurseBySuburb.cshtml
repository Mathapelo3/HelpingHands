@using HelpingHands.Models
@model NurseSuburbVM

<div class="container">

    <div class="card">


        <div class="card-header d-flex">

            <p class="text-uppercase pt-1">Nurses in this Suburb</p>

            <div class="ms-auto">

                <a class="btn btn-danger" asp-action="GetSuburbs" asp-controller="OfficeManager">Back</a>

            </div>
        </div>
        <div class="card-body">
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Surname:</strong> @Model.Surname</p>
            <p><strong>Suburb:</strong> @Model.Suburb</p>
            <p><strong>Number of Nurses in this Suburb:</strong> @Model.NumberOfNursesPerSuburb</p>

        </div>

    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .report-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .report-info {
        float: right;
        margin-right: 20px;
    }

    .report-table {
        width: 100%;
        border-collapse: collapse;
    }

        .report-table th, .report-table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .report-table th {
            background-color: #f2f2f2;
            text-align: left;
        }
</style>

