@using HelpingHands.Models
@model List<NurseVM>




<section class="section profile">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with hoverable rows</h5>
                    @if (Model != null && Model.Any())
                    {





                        <!-- Table with hoverable rows -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Surname</th>
                                    <th scope="col">Nurse Code</th>
                                   


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model)
                                {
                                    <tr>
                                        <td>@contract.FirstName</td>
                                        <td>@contract.Surname</td>
                                        <td>@contract.NurseCode</td>
                                       
                                        <td>
                                            <a asp-action="ViewVisit" asp-controller="OfficeManager" asp-route-visitId="@contract.NurseId">
                                                <i class='bx bx-info-circle' style='color:#16697a'></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {

                        <hr />
                        <br />


                        <h2>No Care Visits Found from selected contract.</h2>

                    }


                </div>
            </div>

        </div>
    </div>
</section>
