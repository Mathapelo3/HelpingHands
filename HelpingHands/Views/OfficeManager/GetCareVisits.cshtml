@using HelpingHands.Models
@model List<CareVisitVM>




<section class="section profile">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with hoverable rows</h5>
                    @if (Model != null && Model.Any())
                    {
                       
                           
                      
                       

                        <!-- Table with hoverable rows -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Visit date</th>
                                    <th scope="col">Approx.Arrive Time</th>
                                    <th scope="col">Arrival Time</th>
                                    <th scope="col">Depart Time</th>
                                   
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model)
                                {
                                    <tr>
                                        <td>@contract.VisitDate.ToString("yyyy-MM-dd")</td>
                                        <td>@contract.ApproxArriveDate.ToString("hh\\:mm")</td>
                                        <td>@contract.ArrivalTime.ToString("hh\\:mm")</td>
                                        <td>@contract.DepartTime.ToString("hh\\:mm")</td>
                                        <td>
                                            <a asp-action="ViewVisit" asp-controller="OfficeManager" asp-route-visitId="@contract.CareVisitId">
                                                <i class='bx bx-info-circle' style='color:#16697a'></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                       
                        <hr />
                        <br />


                        <h2>No Care Visits Found from selected contract.</h2>

                    }


                </div>
            </div>

        </div>
    </div>
</section>
