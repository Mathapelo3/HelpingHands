@using HelpingHands.Models
@model List<PreferredSuburbVM>

<section class="section profile">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with hoverable rows</h5>
                    @if (Model != null && Model.Any())
                    {
                        <form asp-action="SuburbPerNurse" method="get">
                            <div class="row mb-3">
                                <label for="selectNurse" class="col-md-2 col-form-label">Select Nurse</label>
                                <div class="col-md-3">
                                    <select name="name" class="form-select" aria-label="Default select example">
                                        @foreach (var item in ViewBag.NurseList)
                                        {
                                            <option value="@item.Text">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="submit" value="Filter by Nurse" class="btn btn-primary" style="color:#fff; background-color:#16697a;">
                                </div>
                                <!-- Other form elements -->
                            </div>
                        </form>

                        <div class="report-header">
                            <!-- Replace 'path/to/your/logo.png' with the actual path or URL to your company logo -->
                            <img src="path/to/your/logo.png" alt="Company Logo" class="company-logo">

                            <h1>@Model.FirstOrDefault()?.FirstName"</h1>
                            <p>Generated on: {{ currentDateTime }}</p>
                        </div>

                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th scope="col">Suburb</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model)
                                {
                                    <tr>
                                        
                                        <td>@contract.Suburb</td>
                                       
                                       
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        


                        <h2>No nurses found based on the selected suburb.</h2>

                    }


                </div>
            </div>

        </div>
    </div>
</section>
