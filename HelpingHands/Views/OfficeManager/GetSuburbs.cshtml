@using HelpingHands
@model List<SuburbVM>

<section class="section profile">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body pt-3">

                    <div class="tab-content pt-3">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">List of Suburbs</h5>
                            @if (Model.Count > 0)
                            {
                                <table class="table" id="tblCity">
                                    <thead>
                                        <tr>
                                            <th>Suburb Name </th>
                                           

                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var suburb in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @suburb.Suburb
                                                </td>
                                                

                                                <td>
                                                    <form method="post" asp-action="NurseBySuburb" asp-controller="OfficeManager">
                                                        <input type="hidden" name="conditionId" value="@suburb.SuburbId" />
                                                       
                                                        <button type="submit" class="btn btn-primary"  style="color:white; background-color:darkcyan;">
                                                            Get Nurses
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <h2>You have not add any Condition.</h2>
                            }


                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>
