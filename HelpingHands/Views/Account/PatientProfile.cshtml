@using HelpingHands.Models
@model Patient

<section class="section profile">
    <div class="row">
        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

            <!-- Profile Edit Form -->
            <form>
                <div class="row mb-3">
                    <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                    <div class="col-md-8 col-lg-9">
                        <img src="assets/img/profile-img.jpg" alt="Profile">
                        <div class="pt-2">
                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                            <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="Surname"  type="text" class="form-control" id="fullName">
                    </div>
                    <span asp-validation-for="Surname" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="company" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="FirstName" type="text" class="form-control" id="company" >
                    </div>
                    <span asp-validation-for="FirstName" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Gender</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="Gender" type="text" class="form-control" id="Country">
                    </div>
                    <span asp-validation-for="Gender" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="inputDate" class="col-md-4 col-lg-3 col-form-label">Date of Birth</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="BirthDate" type="date" class="form-control">
                    </div>
                    <span asp-validation-for="BirthDate" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Gender</label>
                    <div class="col-md-8 col-lg-9">
                        <div class="col-sm-10">
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Suburb</label>
                    <div class="col-md-8 col-lg-9">
                        <div class="col-sm-10">
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Select suburb</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                    <span asp-validation-for="Suburb" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Emergency Contact Name</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="EmergencyPerson" type="text" class="form-control" id="company">
                    </div>
                    <span asp-validation-for="EmergencyPerson" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="company" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                    <div class="col-md-8 col-lg-9">
                        <input asp-for="EmergencyContact" type="text" class="form-control" id="company">
                    </div>
                    <span asp-validation-for="EmergencyContact" style="color:red"></span>
                </div>

                <div class="row mb-3">
                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">Additional information</label>
                    <div class="col-md-8 col-lg-9">
                        <textarea asp-for="AdditionalInformation" class="form-control" style="height: 100px"></textarea>
                    </div>
                </div>

                <div class="text-center">
                    <button asp-action="SetUpProfile" asp-controller="Account" type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form><!-- End Profile Edit Form -->

        </div>
    </div>
</section>