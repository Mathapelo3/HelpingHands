    <section class="hero spad set-bg" >
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="hero__text">
                        <span>GET THE HELP YOU NEED </span>
                        <h2>Get free, mobile, quality wound care servise from nurses</h2>
                        <a asp-action="ContactUs" asp-controller="Home" class="primary-btn normal-btn">Contact us</a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="consultation__video set-bg" style="background-repeat:no-repeat;background-size:cover">
