@model ChangePasswordVM

@{
    Layout = "_DefaultLayout";
}


<section class="section profile">
    <div class="row">
        <div class="col-lx-12">
            <div class="tab-content pt-3">
                <div class="tab-pane fade show active profile-overview" id="profile-overview">

                    <h2>Forgot password</h2>
                    <h2>Reset password</h2>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row mb-3">
                                    <label asp-for="OldPassword" class="form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="OldPassword" class="form-control" autocomplete="username" aria-required="true" />
                                    </div>
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="NewPassword" class="form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="NewPassword" class="form-control" autocomplete="username" aria-required="true" />
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="username" aria-required="true" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>


        </div>

    </div>
</section>