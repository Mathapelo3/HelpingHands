@using HelpingHands
@model List<PatientConditionVM>

@{
    Layout = "_PatientConditionLayout";
}


<section class="section profile">
    <div class="row">

        <div class="col-lg-12">

            <div class="card">
                <div class="card-body pt-3">
                    
                    <div class="tab-content pt-3">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Patient Conditions</h5>
                            @if(Model.Count > 0)
                            {
                                <table class="table" id="tblCity">
                                    <thead>
                                        <tr>
                                            <th>Condition Name</th>
                                           
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var condition in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @condition.Name
                                                </td>
                                               
                                                <td>
                                                    <form method="post" asp-action="DeleteMyCondition" asp-controller="Patient">
                                                        <input type="hidden" name="conditionId" value="@condition.ConditionId" />
                                                        <input type="hidden" name="patientId" value="@condition.PatientId" />
                                                        <button type="submit" style="background:none; border:none; padding: 0; font: inherit; cursor: pointer;">
                                                            <i class='bx bx-trash' style='color:#e31313'></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <h2>You have not add any Condition.</h2>
                            }


                        </div>
                        
                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>




