@{
    Layout = "_Layout";
}


<section class="section" style="background-color: #f0f3f5">
    <div class="row">
        <div class=" col-xl-3 col-md-6">
            <a asp-action="PatientProfile" asp-controller="Patient">
                <div class="card bg-pattern">
                    <div class="card-body btn btn-button">
                        <div class="float-right">
                            <img src="~/image/user.png" />
                        </div>
                        <h5 class="font-size-20 mt-0 pt-1">24</h5>
                        <h6 class="text-muted mb-0">Profile</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-action="GetPatientCondition" asp-controller="Patient">
                <div class="card bg-pattern">
                    <div class="card-body btn btn-button">
                        <div class="float-right">
                            <img src="~/image/inflammation.png" />
                        </div>
                        <h5 class="font-size-20 mt-0 pt-1">24</h5>
                        <h6 class="text-muted mb-0">My Chronic conditions</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-action="GetCareContracts" asp-controller="Patient">
                <div class="card bg-pattern">
                    <div class="card-body btn btn-button">
                        <div class="float-right">
                            <img src="~/image/contract.png" />
                        </div>
                        <h5 class="font-size-20 mt-0 pt-1">24</h5>
                        <h6 class="text-muted mb-0">View Care Contracts</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6">
            <a asp-action="ManagePassword" asp-controller="Patient">
                <div class="card bg-pattern">
                    <div class="card-body btn btn-button">
                        <div class="float-right">
                            <img src="~/image/reset-password.png" />
                        </div>
                        <h5 class="font-size-20 mt-0 pt-1">24</h5>
                        <h6 class="text-muted mb-0">Manage Password</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>
